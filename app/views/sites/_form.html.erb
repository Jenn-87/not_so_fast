<%= simple_form_for site do |f| %>
  <%# <%= f.error_notification %>
  <%# f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:
  # base].present? %>

  <div class="form-inputs">
    <%= f.input :referral_site, as: :text %>
    <%= f.input :reason, as: :text %>
    <%= f.input :url, as: :text %>
    <%= f.input :blocked, label: "Block?", as: :radio_buttons %>
    <%= f.input :trust_with_popup, label: "Trust?", as: :radio_buttons %>
  </div>

  <div class="form-actions">
    <%= f.submit "Submit", class: 'btn btn-primary' %>
  </div>
<% end %>

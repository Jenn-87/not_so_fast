<% if @notifications.any? %>
<div class="profile-card-banner" style="background-color: #FFD301"></div>
  <%= image_tag "zach.svg", class: "avatar-bordered-alert dropdown-toggle", role: "button",data: { "bs-toggle": "dropdown" }, 'aria-expanded': false %>
<% else %>
<div class="profile-card-banner" style="background-color: #7BB562"></div>
  <%= image_tag "zach.svg", class: "avatar-bordered-safe dropdown-toggle", role: "button",data: { "bs-toggle": "dropdown" }, 'aria-expanded': false %>
<% end %>
<div class="care-receiver-info">
  <h2><%= current_user.first_name %> <%= current_user.last_name %></h2>
  <p><%= current_user.phone_number %> </p>
</div>


<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#add-a-care-receiver">
  Add your care receiver
</button>

<!-- Modal -->
<div class="modal fade" id="add-a-care-receiver" tabindex="-1" aria-labelledby="addACareReceiverLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addACareReceiverLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= simple_form_for @care_receiver do |f| %>
          <%= f.input :first_name, label: 'first name of your care receiver' %>
          <%= f.input :last_name, label: 'last name of your care receiver' %>
          <%= f.input :relationship, label: 'What is the relationship with your care receiver?' %>
          <%= f.button :submit %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

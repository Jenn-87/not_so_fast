<div class="container">
  <%= render 'shared/banner1' %>
</div>

<div class="timeline">
  <div class="timeline__component">
    <div class="timeline__date timeline__date--right">Step 1 -
    <%= image_tag "internet-security.png", class: "image-large" %>
    </div>
  </div>
  <div class="timeline__middle">
    <div class="timeline__point"></div>
  </div>
  <div class="timeline__component timeline__component--bg">
    <h2 class="timeline__title"> <%= link_to "Sign up", new_user_registration_path, class: "link" %></h2>
    <p class="timeline__paragraph">
    Create your account, login, and password. Or sign in to your account.
    </p>
  </div>
  <div class="timeline__component timeline__component--bg">
    <h2 class="timeline__title"><a href="https://www.chrome.com">Add Chrome Extension to loved one's device</a></h2>
    <p class="timeline__paragraph">
      Personalize and customize the way Google Chrome works for you, helping you to be updated in realtime.
    </p>
    <p class="timeline__paragraph">
    </p>
  </div>
  <div class="timeline__middle">
    <div class="timeline__point"></div>
  </div>
  <div class="timeline__component">
    <div class="timeline__date">Step 2 -
    <%= image_tag "extension.png", class: "image-large" %>
    </div>
  </div>
  <div class="timeline__component">
    <div class="timeline__date timeline__date--right">Step 3 -
    <%= image_tag "sms.png", class: "image-large" %>
    </div>
  </div>
  <div class="timeline__middle">
    <div class="timeline__point"></div>
  </div>
  <div class="timeline__component timeline__component--bg">
    <h2 class="timeline__title"> <%= link_to "Handle Notifications from here", notifications_path, class: "link" %></h2>
    <p class="timeline__paragraph">
    Tap the notifications icon to open your app or take an action directly from the notification.
    </p>
  </div>
  <div class="timeline__component timeline__component--bottom timeline__component--bg">
    <h2 class="timeline__title"> <%= link_to "Edit block/trust lists", sites_path, class: "link" %></h2>
    <p class="timeline__paragraph">
    Select Block and trust lists to view or edit a list, and configure the settings.
    </p>
    <p class="timeline__paragraph">
    </p>
  </div>
  <div class="timeline__middle">
    <div class="timeline__point"></div>
    <div class="timeline__point timeline__point--bottom"></div>
  </div>
  <div class="timeline__component timeline__component--bottom">
    <div class="timeline__date">Step 4 -
    <%= image_tag "assessment.png", class: "image-large" %>
    </div>
  </div>
</div>
